    uid: 1000
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    shell: /bin/bash
    # The user should be a member of the lxd group to be able to create
    # containers which is needed for the tempesta-test/setup.py script.
    groups: [lxd]
    ssh_authorized_keys:
      - ssh-rsa  tempesta-vm-key

